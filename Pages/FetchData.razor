@page "/fetchdata"
@using BlazorAirQuality.DTOs
@inject HttpClient Http

<PageTitle>Air Quality of various countries</PageTitle>

<h1>Air Quality of various countries</h1>

<p>Encourage air quality</p>

@if (airQualities == null)
{
    <div class="d-flex justify-content-center">
      <div class="spinner-border" role="status">
      </div>
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Count</th>
                <th>Locations</th>
                <th>LastUpdated</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var aq in airQualities)
            {
                <tr>
                    <td>@aq.Code</td>
                    <td>@aq.Name</td>
                    <td>@aq.Count</td>
                    <td>@aq.Locations</td>
                    <td>@aq.LastUpdated</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private AirQuality[]? airQualities;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var result = await Http.GetFromJsonAsync<Response>("https://api.openaq.org/v2/countries?limit=200&page=1&offset=0&sort=asc&order_by=country");
            airQualities = result.Results;
        }   
        catch(Exception e)
        {
            Console.WriteLine("Error : ", e);    
        }     
    }
}